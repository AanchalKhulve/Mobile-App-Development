<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity2">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.005">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"
        />
    </LinearLayout>
    <TextView
            android:layout_width="335dp"
            android:layout_height="72dp"
            android:text="Welcome to my app"
            android:padding="15dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.232"
            app:layout_constraintHorizontal_bias="0.789"/>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginTop="680dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/cardView2">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See you again!"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/textView1"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
            android:layout_width="153dp"
            android:layout_height="93dp"
            android:text="Button2"
            android:padding="15dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.383"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:layout_width="358dp"
            android:layout_height="87dp"
            android:id="@+id/textView2"
            android:text="@string/link_to_site"
            android:textColorLink="@color/colorAccent"
            android:padding="15dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.551"
            app:layout_constraintHorizontal_bias="0.509"/>
    <TextView
            android:layout_width="195dp"
            android:layout_height="66dp"
            android:text="@string/contact_me"
            android:textSize="30sp"
            android:layout_margin="140dp"
            android:layout_gravity="center_horizontal" app:layout_anchorGravity="bottom|center"
            app:layout_anchor="@+id/include"
            android:id="@+id/textView" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>