<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">



    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" android:layout_height="match_parent" app:layout_anchorGravity="end|bottom"
             app:layout_anchor="@+id/textView" android:id="@+id/include"/>


    <TextView
            android:layout_width="236dp"
            android:layout_height="85dp"
            android:text="@string/contact_me"
            android:textSize="30sp"
            android:layout_margin="140dp"
            android:layout_gravity="center_horizontal" app:layout_anchorGravity="bottom|center"
            app:layout_anchor="@+id/include"
            android:id="@+id/textView"/>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <Button
                android:text="Button2"

                android:layout_width="149dp"
                android:layout_height="64dp"

                android:id="@+id/button2"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentBottom="true" android:layout_marginLeft="250dp"
                android:layout_marginTop="250dp" android:layout_marginStart="250dp"
                android:layout_marginBottom="417dp" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>
        <Button
                android:text="Button1"

                android:layout_width="149dp"
                android:layout_height="64dp"

                android:id="@+id/button1"
                android:layout_marginLeft="51dp" android:layout_marginStart="51dp"
                android:layout_marginTop="250dp"
                android:layout_marginBottom="417dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
        <Button
                android:text="Button3"

                android:layout_width="149dp"
                android:layout_height="64dp"

                android:id="@+id/button3"

                android:layout_gravity="end"
                android:layout_marginBottom="229dp"
                android:layout_below="@+id/button1"
                android:layout_marginLeft="51dp" android:layout_marginStart="51dp"
                 android:layout_marginTop="438dp"
                android:layout_alignParentBottom="true" android:layout_alignParentTop="true"/>
        />
        <Button
                android:text="Button4"

                android:layout_width="149dp"
                android:layout_height="64dp"

                android:id="@+id/button4"

                android:layout_gravity="end"
                android:layout_marginBottom="229dp" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp" android:layout_marginTop="438dp" android:layout_below="@+id/button2"
                android:layout_alignParentBottom="true" android:layout_alignParentTop="true"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>