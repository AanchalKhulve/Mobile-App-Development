<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailContactMe">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.005" android:id="@+id/linearLayout2">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"
        />
    </LinearLayout>
    <TextView
            android:layout_width="335dp"
            android:layout_height="72dp"
            android:text="Welcome to my app"
            android:padding="15dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.232"
            app:layout_constraintHorizontal_bias="0.789"/>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginTop="680dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/cardView3">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See you again!"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/textView1"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <EditText
            android:id="@+id/editText1"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:text="Name" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.367" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
    />
    <EditText
            android:id="@+id/editText2"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:text="Email" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.474" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
    />
    <EditText
            android:id="@+id/editText3"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:text="Company" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.581" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
    />
    <EditText
            android:id="@+id/editText4"
            android:layout_width="335dp"
            android:layout_height="115dp"
            android:text="Enter your Question" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.75" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.491"/>
    <Button
            android:text="Send Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/cardView3" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="0.452" app:layout_constraintVertical_bias="0.906"/>
</android.support.constraint.ConstraintLayout>