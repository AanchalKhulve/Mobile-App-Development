<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity1">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.005" android:id="@+id/linearLayout">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"
        />
    </LinearLayout>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginTop="680dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/cardView">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See you again!"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/textView1"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
            android:layout_width="164dp"
            android:layout_height="78dp"
            android:text="Button1"
            android:padding="15dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.382"
            app:layout_constraintHorizontal_bias="0.497" android:id="@+id/textView2"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="69dp"
            android:text="To do list:"
            android:padding="15dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.495"
            app:layout_constraintHorizontal_bias="0.483"/>
    <TextView
            android:layout_width="335dp"
            android:layout_height="72dp"
            android:text="Welcome to my app"
            android:padding="15dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.232"
            app:layout_constraintHorizontal_bias="0.789"/>
    <TextView
            android:layout_width="230dp"
            android:layout_height="75dp"
            android:text="@string/contact_me"
            android:textSize="30sp"
            android:layout_margin="140dp"
            android:layout_gravity="center_horizontal" app:layout_anchorGravity="bottom|center"
            app:layout_anchor="@+id/include"
            android:id="@+id/textView"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="84dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.96" app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:id="@+id/tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bulleted_list"
            android:background="#8dce92"
            android:textSize="18dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.345" app:layout_constraintVertical_bias="0.62"/>
</android.support.constraint.ConstraintLayout>

